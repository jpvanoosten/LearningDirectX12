{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "${sourceDir}/Tools/vcpkg/scripts/buildsystems/vcpkg.cmake"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "vs2026",
      "displayName": "Visual Studio 2026",
      "description": "Configure with VS 2026 generator",
      "inherits": "windows-base",
      "generator": "Visual Studio 18 2026",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    },
    {
      "name": "vs2022",
      "displayName": "Visual Studio 2022",
      "description": "Configure with VS 2022 generator",
      "inherits": "windows-base",
      "generator": "Visual Studio 17 2022",
      "architecture": {
        "value": "x64",
        "strategy": "set"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "vs2026-debug",
      "displayName": "VS2026 Debug",
      "configurePreset": "vs2026",
      "configuration": "Debug"
    },
    {
      "name": "vs2026-release",
      "displayName": "VS2026 Release",
      "configurePreset": "vs2026",
      "configuration": "Release"
    },
    {
      "name": "vs2022-debug",
      "displayName": "VS2022 Debug",
      "configurePreset": "vs2022",
      "configuration": "Debug"
    },
    {
      "name": "vs2022-release",
      "displayName": "VS2022 Release",
      "configurePreset": "vs2022",
      "configuration": "Release"
    }
  ]
}
